<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape2"></ImageView>

    <TextView
        android:id="@+id/questionTitle"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/questionImageView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Название вопроса"></TextView>

    <ImageButton
        android:id="@+id/deleteQuestion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circular_shape"
        android:src="@drawable/baseline_cancel_36"
        android:backgroundTint="@color/salatowy"/>
</RelativeLayout>